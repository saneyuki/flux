{
  "name": "flux-chat",
  "version": "0.0.2",
  "description": "Example Flux chat application primarily intended to explain the use of Dispatcher.waitFor().",
  "repository": "https://github.com/facebook/flux",
  "main": "js/app.js",
  "dependencies": {
    "flux": "^2.0.1",
    "keymirror": "^0.1.1",
    "object-assign": "^1.0.0",
    "react": "^0.12.2",
    "rx-lite": "^2.5.1"
  },
  "devDependencies": {
    "browserify": "^9.0.7",
    "envify": "^3.4.0",
    "jest-cli": "~0.1.17",
    "reactify": "^1.1.0",
    "uglify-js": "^2.4.19",
    "watchify": "^3.1.0"
  },
  "scripts": {
    "start": "watchify -o js/bundle.js -v -d js/app.js",
